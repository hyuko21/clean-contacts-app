{
  "name": "contacts-app-server",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "type-check": "tsc --project tsconfig.json --skipLibCheck --noEmit",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main/server",
    "start:dev": "tsnd -r tsconfig-paths/register --respawn --exit-child --transpile-only src/main/server",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "yarn test --watch --detectOpenHandles",
    "test:unit": "yarn test:watch -c jest.unit-config.js",
    "test:e2e": "yarn test:watch -c jest.e2e-config.js"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "faker": "^5.5.3",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/glob": "^7.2.0",
    "app-root-path": "^3.0.0",
    "celebrate": "^15.0.0",
    "cuid": "^2.1.8",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.2.0",
    "glob": "^7.2.0",
    "module-alias": "^2.2.2",
    "winston": "^3.3.3"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
